{
  "$schema": "https://schemas.platformatic.dev/@platformatic/runtime/2.50.0.json",
  "entrypoint": "composer",
  "watch": true,
  "autoload": {
    "path": "services",
    "exclude": ["docs"]
  },
  "logger": {
    "level": "{PLT_SERVER_LOGGER_LEVEL}"
  },
  "preload": ["telemetry.js"],
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}"
  },
  "managementApi": "{PLT_MANAGEMENT_API}"
}
